<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height">

    <RelativeLayout
        android:id="@+id/users_status_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_status_img"
            android:layout_width="@dimen/item_img_size"
            android:layout_height="@dimen/item_img_size"
            android:layout_margin="@dimen/item_img_margin"
            android:src="@drawable/placeholder"
            app:civ_border_color="@color/status_color"
            app:civ_border_width="@dimen/border_size" />

        <TextView
            android:id="@+id/user_status_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_name_margin"
            android:layout_toEndOf="@+id/user_status_img"
            android:layout_toRightOf="@+id/user_status_img"
            android:fontFamily="monospace"
            android:text="@string/info_name"
            android:textSize="@dimen/item_name_size"
            android:textStyle="bold"
            tools:targetApi="jelly_bean" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/online_size"
            android:layout_marginStart="@dimen/online_size"
            android:layout_marginTop="@dimen/online_margin"
            android:src="@drawable/ic_fiber_manual_record_black_24dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>