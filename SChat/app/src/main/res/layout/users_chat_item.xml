<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:layout_margin="@dimen/item_margin">

    <RelativeLayout
        android:id="@+id/users_chat_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/users_chat_img"
            android:layout_width="@dimen/item_img_size"
            android:layout_height="@dimen/item_img_size"
            android:layout_margin="@dimen/item_img_margin"
            android:src="@drawable/placeholder"
            app:civ_border_color="@color/background_color"
            app:civ_border_width="@dimen/border_size" />

        <TextView
            android:id="@+id/users_chat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_name_margin"
            android:layout_toEndOf="@+id/users_chat_img"
            android:layout_toRightOf="@+id/users_chat_img"
            android:fontFamily="monospace"
            android:text="@string/info_name"
            android:textSize="@dimen/item_name_size"
            android:textStyle="bold"
            tools:targetApi="jelly_bean" />

        <TextView
            android:id="@+id/users_chat_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_status_margin"
            android:layout_toEndOf="@+id/users_chat_img"
            android:layout_toRightOf="@+id/users_chat_img"
            android:text="@string/item_status_txt"
            android:textSize="@dimen/number_size" />

    </RelativeLayout>

</android.support.v7.widget.CardView>